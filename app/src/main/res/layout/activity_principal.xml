<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/apl_EC2"
        android:layout_width="match_parent"
        android:elevation="16dp"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_EC2"
        android:layout_width="match_parent"
        android:elevation="8dp"
        app:title="Bienvenido"
        app:subtitle="EC2"
        app:subtitleTextColor="@color/cardview_dark_background"
        app:titleTextColor="@color/cardview_dark_background"
        android:background="@color/material_dynamic_tertiary90"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_apuesta"
        android:layout_width="56dp"
        android:layout_height="75dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_add_apuesta"
        app:elevation="8dp"
        app:fabSize="normal"
        tools:layout_editor_absoluteX="328dp"
        tools:layout_editor_absoluteY="659dp" />


</androidx.constraintlayout.widget.ConstraintLayout>